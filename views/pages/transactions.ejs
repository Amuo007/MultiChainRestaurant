<div class="bg-white rounded-lg shadow p-6">
    <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold">Transactions</h2>
        
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Branch</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                    <!-- <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th> -->
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (transactions.length > 0) { %>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td class="px-6 py-4"><%= transaction.transactionid %></td>
                            <td class="px-6 py-4"><%= transaction.branchname %></td>
                            <td class="px-6 py-4"><%= transaction.transactiontype %></td>
                            <td class="px-6 py-4">$<%= Number(transaction.amount).toFixed(2) %></td>
                            <td class="px-6 py-4"><%= transaction.transactiondate %></td>
                            <!-- <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded-full text-xs 
                                    <%= transaction.status === 'Completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                    <%= transaction.status %>
                                </span>
                            </td> -->
                            <td class="px-6 py-4">
                                <!-- <div class="flex gap-2">
                                    <button><i data-lucide="edit" class="w-4 h-4 text-gray-500"></i></button>
                                    <button><i data-lucide="trash-2" class="w-4 h-4 text-red-500"></i></button>
                                </div> -->
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="px-6 py-4 text-center text-gray-500">
                            No transactions available.
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<script>
    lucide.createIcons();
</script>